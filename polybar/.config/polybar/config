[module/xwindow]
type = internal/xwindow
label = "%title:19:19%"
format-prefix = "window = '"
format-suffix = "'"
format-prefix-foreground = ${colors.foreground}
format-suffix-foreground = ${colors.foreground}
label-foreground = ${colors.fourteen}
label-empty = "                   "
label-empty-foreground = ${colors.fourteen}

[module/date]
type = internal/date
interval = 5

date = "%d-%m-%Y"

time = "%H:%M"

format-suffix = "'"
format-suffix-foreground = ${colors.foreground}

format-foreground = ${colors.fourteen}
format-prefix = "date = '"
format-prefix-foreground = ${colors.foreground}
format-underline =

label = %date% %time%

[module/volume]
type = internal/alsa

master-mixer = Master

master-soundcard = hw:1

headphone-id = 1

format-volume = <label-volume><ramp-volume>
label-volume =
label-volume-foreground = ${colors.fourteen}

label-muted = nil
label-muted-foreground = ${colors.fourteen}

ramp-volume-foreground = ${colors.fourteen}

ramp-volume-0 = 000
ramp-volume-1 = 005
ramp-volume-2 = 010
ramp-volume-3 = 015
ramp-volume-4 = 020
ramp-volume-5 = 025
ramp-volume-6 = 030
ramp-volume-7 = 035
ramp-volume-8 = 040
ramp-volume-9 = 045
ramp-volume-10 = 050
ramp-volume-11 = 055
ramp-volume-12 = 060
ramp-volume-13 = 065
ramp-volume-14 = 070
ramp-volume-15 = 075
ramp-volume-16 = 080
ramp-volume-17 = 085
ramp-volume-18 = 090
ramp-volume-19 = 095
ramp-volume-20 = 100

format-muted-prefix = "volume = "
format-muted-foreground = ${colors.foreground}
format-volume-prefix = "volume = "
format-volume-foreground = ${colors.foreground}
format-volume-suffix =
format-volume-suffix-foreground = ${colors.foreground}

[module/battery]
type = internal/battery
battery = BAT1
adapter = ADP1
full-at = 95
poll-interval = 3

format-full-prefix = "battery = "
format-charging-prefix = "battery = "
format-discharging-prefix = "battery = "
format-full-prefix-foreground = ${colors.foreground}
format-charging-prefix-foreground = ${colors.foreground}
format-discharging-prefix-foreground = ${colors.foreground}

format-charging = <label-charging>
format-charging-foreground = ${colors.fourteen}

label-charging = %percentage:3:3%

format-discharging = <label-discharging>
format-discharging-foreground = ${colors.fourteen}

label-discharging = %percentage:3:3%

format-full = max
format-full-foreground = ${colors.fourteen}

animation-charging-framerate = 0

[settings]
screenchange-reload = true
