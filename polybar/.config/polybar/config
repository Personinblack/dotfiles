time-alt = "%H:%M:%S"

format-suffix = " }~-"
format-suffix-foreground = ${colors.fourteen}

format-foreground = ${colors.foreground}
format-prefix =
format-prefix-foreground =
format-underline =

label = %date% %time%

[module/volume]
type = internal/alsa

master-mixer = Master
;speaker-mixer = Speaker
;headphone-mixer = Bass Speaker

master-soundcard = hw:1
;speaker-soundcard = hw:1
;headphone-soundcard = hw:1

headphone-id = 1

;mapped = true

format-volume = <label-volume> <bar-volume>
label-volume = volume
label-volume-foreground = ${colors.foreground}

label-muted = volume muted
label-muted-foreground = ${colors.six}

bar-volume-width = 10
bar-volume-gradient = true
bar-volume-indicator =
bar-volume-fill = -
bar-volume-empty = -
bar-volume-empty-foreground = ${colors.three}

format-muted-prefix = "-~{ "
format-muted-foreground = ${colors.fourteen}
format-volume-prefix = "-~{ "
format-volume-foreground = ${colors.fourteen}

[module/battery]
type = internal/battery
battery = BAT1
adapter = ADP1
full-at = 95

format-charging = <animation-charging> <label-charging>
format-charging-foreground = ${colors.foreground}
;format-charging-underline = #C9B933

format-discharging = <ramp-capacity> <label-discharging>
;format-discharging-underline = ${self.format-charging-underline}

format-full = battery full
format-full-foreground = ${colors.foreground}
;format-full-prefix = "full "
;format-full-underline = ${self.format-charging-underline}

