{
    "editor.fontSize": 13,
    "editor.fontLigatures": true,

    "workbench.colorTheme": "Darwin",
    "workbench.iconTheme": "file-icons-colourless",

    "window.restoreWindows": "all",
    "workbench.startupEditor": "none",
    "extensions.ignoreRecommendations": true,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "extensions.autoUpdate": true,

    "window.title": "imcoding ${folderName}",
    "window.menuBarVisibility": "toggle",
    "window.zoomLevel": 1,
    "editor.rulers": [ 100 ],
    "editor.showFoldingControls": "always",
    "editor.minimap.enabled": false,
    "editor.snippetSuggestions": "bottom",
    "editor.cursorBlinking": "solid",
    "editor.cursorStyle": "block",
    "workbench.editor.showTabs": false,
    "workbench.statusBar.feedback.visible": false,
    "zenMode.centerLayout": true,

    "files.insertFinalNewline": true,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 100,
    "editor.tabSize": 4,
    "editor.lineHeight": 19,
    "editor.multiCursorModifier": "alt",
    "editor.detectIndentation": false,
    "editor.mouseWheelScrollSensitivity": 2,
    "editor.mouseWheelZoom": true,
    "editor.dragAndDrop": false,
    "editor.quickSuggestions": {
        "other": false,
        "comments": false,
        "strings": false
    },
    "editor.tabCompletion": "onlySnippets",

    "debug.internalConsoleOptions": "neverOpen",
    "debug.showInStatusBar": "never",
    "debug.openDebug": "neverOpen",

    "terminal.integrated.fontSize": 12,
    "terminal.integrated.fontFamily": "monospace",

    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.enableCommitSigning": true,

    "markdownlint.config": {
        "MD033": false
    },

    "tslint.autoFixOnSave": false,

    "files.exclude": {
        "**/.git": true,
        "**/node_modules": true
    },

    "gitlens.keymap": "alternate",
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true,
        "suppressUpdateNotice": false,
        "suppressWelcomeNotice": true
    },

    "scrolloff.scrolloff": 10,

    "todo-tree.defaultHighlight": {
        "foreground": "green",
        "type": "none"
    },
    "todo-tree.customHighlight": {
        "TODO": {},
        "FIXME": {}
    },

    "liveshare.focusBehavior": "prompt",

    "java.configuration.updateBuildConfiguration": "automatic",
    "java.referencesCodeLens.enabled": false,
    "java.errors.incompleteClasspath.severity": "ignore",
    "java.signatureHelp.enabled": true,
    "java.format.enabled": false,
    "java.autobuild.enabled": true,
    "java.completion.overwrite": false,

    "ruby.useLanguageServer": true,

    "[ruby]": {
        "editor.tabSize": 2,
        "editor.rulers": [ 80 ],
        "editor.wordWrapColumn": 80,
    },

    "[gemfile]": {
        "editor.tabSize": 2,
        "editor.rulers": [ 80 ],
        "editor.wordWrapColumn": 80,
    },

    "[haml]": {
        "editor.tabSize": 2,
        "editor.wordWrap": "off"
    },

    "[typescript]": {
        "editor.tabSize": 2,
        "editor.rulers": [ 80 ],
        "editor.wordWrapColumn": 80,
    },

    "blockhighlight.background": [
        "145",
        "145",
        "145",
        ".05"
    ],
    "breadcrumbs.enabled": true,
    "gitlens.views.fileHistory.enabled": true,
    "gitlens.views.lineHistory.enabled": true,
    "editor.fontFamily": "'Dank Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "workbench.editor.centeredLayoutAutoResize": false,
    "window.titleBarStyle": "native",
    "editor.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": true,
}
